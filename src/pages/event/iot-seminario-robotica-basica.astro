---
import Layout from "../../layouts/event/index.astro";
import Button from "../../components/general/attoms/button";
import CustomNavBar from "../../components/general/organism/custom_navbar";
import Agenda from "../../components/events/organism/Agenda.astro";
import Speaker from "../../components/events/molecule/Speaker.astro";

import { ButtonType } from "../../components/general/attoms/button/types";
import { wave2 } from "../../assets/svgs";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faClock } from "@fortawesome/free-solid-svg-icons";

import type { EventAgenda } from "../../types";

const agenda: EventAgenda = {
  days: [
    {
      title: "Día 1",
      date: new Date("2024-09-27 GMT-0500"),
      items: [
        "Introducción a IoT.",
        "Componentes básicos de electrónica con Arduino",
        "Arduino IDE.",
        "Principios de programación con Arduino IDE.",
      ],
    },
    {
      title: "Día 2",
      date: new Date("2024-10-04 GMT-0500"),
      items: ["Ejercicios prácticos.", "Conexión y programación con Arduino."],
    },
    {
      title: "Día 3",
      date: new Date("2024-10-18 GMT-0500"),
      items: [
        "Repaso del Seminario 2.",
        "Ejercicios prácticos.",
        "Conexión y programación de servomotores con Arduino.",
      ],
    },
    {
      title: "Día 4",
      date: new Date("2024-10-25 GMT-0500"),
      items: [
        "Repaso del Seminario 3.",
        "Ejercicios prácticos.",
        "<span class='font-bold'>Ejercicio Reto:</span> Diseño y construcción de un robot.",
      ],
    },
  ],
};

const props = {
  title: "IoT Events",
  description:
    "Sé parte de uno de los eventos a cargo del equipo de IoT, aquí aprenderás los fundamentos de Robótica, con arduino",
  path: "event/iot-seminario-robotica-basica",
};
---

<Layout {...props}>
  <div class="text-white">
    <CustomNavBar fixed full client:load>
      <a href="#agenda">Agenda</a>
      <a href="#ponentes">Ponentes</a>
    </CustomNavBar>

    <!-- Principal -->
    <main
      id="home"
      class="min-h-screen relative flex items-center justify-center"
    >
      <img
        src="https://cdn.mtocommunity.com/events/thumbnail/iot-seminario-robotica-basica.jpg"
        alt="https://cdn.mtocommunity.com/events/thumbnail/iot-seminario-robotica-basica.jpg"
        class="absolute top-0 object-cover w-full h-full blur-[1px] -z-20 overflow-hidden"
      />
      <div
        class="absolute top-0 w-full h-full from-mto_blue to-mto_gray bg-gradient-to-b -z-10 opacity-80"
      >
      </div>
      <div class="flex flex-col gap-32 items-center">
        <div class="w-3/4">
          <h1 class="text-2xl font-bold text-center">
            Seminario de robótica básica
          </h1>
          <p class="text-sm text-center">
            Sé parte de uno de los eventos a cargo del equipo de IoT, aquí
            aprenderás los fundamentos de Robótica, con arduino.
          </p>
        </div>
        <Button
          type={ButtonType.DISABLED}
          className="w-2/3 flex gap-2 justify-center items-center"
        >
          <FontAwesomeIcon icon={faClock} className="w-4" />
          <span>Inscripciones cerradas</span>
        </Button>
      </div>
    </main>

    <!-- Agenda -->
    <section
      class="min-h-screen agenda-container bg-gradient-to-t from-mto_red to-mto_dark_gray pt-16 flex flex-col xl:items-center"
      id="agenda"
    >
      <h2 class="text-center text-white text-5xl font-bold mb-12 xl:w-2/3">
        Agenda
      </h2>

      <Agenda agenda={agenda} className="bg-slate-300" />

      <img
        src={wave2.src}
        alt={wave2.src}
        class="w-full object-cover object-center aspect-[5/1] xl:aspect-[10/1]"
      />
    </section>
    <!-- Ponentes-->
    <div id="ponentes" class="bg-white pt-0">
      <img
        src={wave2.src}
        alt={wave2.src}
        class="w-full object-cover object-center rotate-180 aspect-[5/1] xl:aspect-[10/1]"
      />
      <div class="flex flex-col items-center gap-16">
        <h2 class="text-5xl text-mto_gray font-bold">Ponentes</h2>
        <div class="flex flex-col items-center xl:flex-row xl:gap-8 pb-32">
          <!-- Ponentes -->

          <Speaker
            avatarUrl="https://cdn.mtocommunity.com/staff-eliana-cajusol.jpg"
            name="Eliana Cajusol"
            role="Líder de IoT Team"
          />
          <Speaker
            avatarUrl="https://cdn.mtocommunity.com/staff-jaime-lopez.jpg"
            name="Jaime López"
            role="Líder de IoT Team"
          />
        </div>
      </div>
    </div>
  </div>
</Layout>
