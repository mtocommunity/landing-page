---
import Layout from "../../layouts/event/index.astro";
import Button from "../../components/general/attoms/button";
import CustomNavBar from "../../components/general/organism/custom_navbar";
import Agenda from "../../components/events/organism/Agenda.astro";
import Speaker from "../../components/events/molecule/Speaker.astro";

import { ButtonType } from "../../components/general/attoms/button/types";
import { wave2 } from "../../assets/svgs";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faClock } from "@fortawesome/free-solid-svg-icons";

import type { EventAgenda } from "../../types";

const agenda: EventAgenda = {
  days: [
    {
      title: "Día 1",
      date: new Date("2024-10-09 GMT-0500"),
      items: [
        "Introducción a la Gestión de Versiones",
        "¿Qué es Git?",
        "Instalación y Configuración",
        "Primeros Pasos con Git",
        "Ejercicio Práctico",
        "Preguntas y Respuestas",
      ],
    },
    {
      title: "Día 2",
      date: new Date("2024-10-16 GMT-0500"),
      items: [
        "Introducción a GitHub",
        "Colaboración en Proyectos",
        "Ramas en Git",
        "Ejercicio Práctico",
        "Conclusiones y Recursos Adicionales",
        "Cierre del Seminario",
      ],
    },
  ],
};

const props = {
  title: "DevTeam seminario fundamentos de git",
  description:
    "Sé parte de uno de los eventos a cargo del equipo de Dev, aquí aprenderás los fundamentos de git para controlar las versiones de tus proyectos",
  path: "event/dev-seminario-git-basico",
};
---

<Layout {...props}>
  <div class="text-white">
    <CustomNavBar fixed full client:load>
      <a href="#agenda">Agenda</a>
      <a href="#ponentes">Ponentes</a>
    </CustomNavBar>

    <!-- Principal -->
    <main
      id="home"
      class="min-h-screen relative flex items-center justify-center"
    >
      <img
        src="https://cdn.mtocommunity.com/events/thumbnail/dev-seminario-git-basico.jpg"
        alt="https://cdn.mtocommunity.com/events/thumbnail/dev-seminario-git-basico.jpg"
        class="absolute top-0 object-cover w-full h-full blur-[1px] -z-20 overflow-hidden"
      />
      <div
        class="absolute top-0 w-full h-full from-mto_gray to-mto_dark_gray bg-gradient-to-b -z-10 opacity-80"
      >
      </div>
      <div class="flex flex-col gap-32 items-center">
        <div class="w-3/4">
          <h1 class="text-2xl font-bold text-center">
            Seminario Fundamentos de Git
          </h1>
          <p class="text-sm text-center">
            En este seminario, obtendrás los conocimientos necesarios para
            utilizar Git desde cero y aplicarlo en la gestión de tus proyectos.
          </p>
        </div>
        <Button
          type={ButtonType.DISABLED}
          className="w-2/3 flex gap-2 justify-center items-center"
        >
          <FontAwesomeIcon icon={faClock} className="w-4" />
          <span>Inscripciones cerradas</span>
        </Button>
      </div>
    </main>

    <!-- Agenda -->
    <section
      class="min-h-screen agenda-container bg-gradient-to-t from-mto_blue_dark to-mto_dark_gray pt-16 flex flex-col xl:items-center"
      id="agenda"
    >
      <h2 class="text-center text-white text-5xl font-bold mb-12 xl:w-2/3">
        Agenda
      </h2>

      <Agenda agenda={agenda} className="bg-slate-300" />

      <img
        src={wave2.src}
        alt={wave2.src}
        class="w-full object-cover object-center aspect-[5/1] xl:aspect-[10/1]"
      />
    </section>
    <!-- Ponentes-->
    <div id="ponentes" class="bg-white pt-0">
      <img
        src={wave2.src}
        alt={wave2.src}
        class="w-full object-cover object-center rotate-180 aspect-[5/1] xl:aspect-[10/1]"
      />
      <div class="flex flex-col items-center gap-16">
        <h2 class="text-5xl text-mto_gray font-bold">Ponentes</h2>
        <div class="flex flex-col items-center xl:flex-row xl:gap-8 pb-32">
          <!-- Ponentes -->

          <Speaker
            avatarUrl="https://cdn.mtocommunity.com/staff-juan-romero.jpg"
            name="Juan Romero"
            role="Líder de Dev Team"
          />
          <Speaker
            avatarUrl="https://cdn.mtocommunity.com/staff-victor-tunoque.png"
            name="Víctor Tuñoque"
            role="Líder de Dev Team"
          />
        </div>
      </div>
    </div>
  </div>
</Layout>
