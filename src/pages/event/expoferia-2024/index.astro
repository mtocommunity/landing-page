---
import Layout from "../../../layouts/event/index.astro";
import CustomNavBar from "../../../components/general/organism/custom_navbar";
import Schedule from "../../../components/events/molecule/schedule/index.astro";
import { MTOTransparentBackground } from "../../../assets";
import ProjectCard from "../../../components/events/molecule/project/index.astro";
import Exhibitor from "../../../components/events/molecule/exhibitor/index.astro";
import Slider from "../../../components/events/molecule/slider/index.astro";
import expoferiaData from "./_data.json";
import { ReactComponent as XTwitter } from "@assets/icons/xtwitter.svg";
import TextBorder from "../../../components/events/molecule/textBorder/index.astro";
import "./_style.css";

const { props, projects, exhibitors, schedules } = expoferiaData;
---

<Layout {...props}>
  <div class="text-white overflow-x-hidden">
    <CustomNavBar fixed full client:load>
      <a href="#about">Sobre la Expoferia</a>
      <a href="#projects">Proyectos</a>
      <a href="#schedule">Cronograma</a>
      <a href="#exhibitors">Expositores</a>
    </CustomNavBar>

    <!-- Principal -->
    <main
      id="home"
      class="min-h-screen relative flex items-center justify-center overflow-x-hidden"
    >
      <div class="bg-box w-full">
        <div class="bg-red w-full"></div>
      </div>
      <div class="flex flex-col items-center w-full">
        <div class="flex items-center justify-center w-full mb-6 select-none">
          <!-- Emojis on the left -->
          <div class="flex flex-col items-center">
            <img
              src="https://cdn.mtocommunity.com/events/expoferia-2024/emojis/joystick.png"
              class="emoji joystick hidden md:block lg:block xl:block"
              alt="Emoji 1"
            />
            <img
              src="https://cdn.mtocommunity.com/events/expoferia-2024/emojis/star-struck.png"
              class="emoji star-struck hidden md:block lg:block xl:block"
              alt="Emoji 2"
            />
            <img
              src="https://cdn.mtocommunity.com/events/expoferia-2024/emojis/lentes.png"
              class="emoji lentes hidden md:block lg:block xl:block"
              alt="Emoji 3"
            />
            <img
              src="https://cdn.mtocommunity.com/events/expoferia-2024/emojis/dado.png"
              class="emoji dado hidden md:block lg:block xl:block"
              alt="Emoji 4"
            />
          </div>

          <!-- Text -->
          <div class="flex flex-col items-center">
            <h2 class="flex font-main_sans items-center font-bold text-black">
              <span class="text-5xl text-white">E</span>
              <XTwitter className="text-5xl w-10 text-white" />
              <span class="text-5xl text-white">PO</span>
            </h2>
            <div class="relative text-5xl font-main_sans font-bold z-10">
              <h2 class="relative z-20 text-mto_purple">FERIA</h2>
              <TextBorder
                title="FERIA"
                color="purple"
                className="text-transparent top-0 absolute scale-125 z-10"
              />
            </div>
            <h3 class="text-white font-main_sans font-bold text-5xl">2024</h3>
          </div>

          <!-- Emojis on the right -->
          <div class="flex flex-col items-center">
            <img
              src="https://cdn.mtocommunity.com/events/expoferia-2024/emojis/happy.png"
              class="emoji happy hidden md:block lg:block xl:block"
              alt="Emoji 5"
            />
            <img
              src="https://cdn.mtocommunity.com/events/expoferia-2024/emojis/smiling.png"
              class="emoji smiling hidden md:block lg:block xl:block"
              alt="Emoji 6"
            />
            <img
              src="https://cdn.mtocommunity.com/events/expoferia-2024/emojis/video-game.png"
              class="emoji video-game hidden md:block lg:block xl:block"
              alt="Emoji 7"
            />
            <img
              src="https://cdn.mtocommunity.com/events/expoferia-2024/emojis/lengua.png"
              class="emoji lengua hidden md:block lg:block xl:block"
              alt="Emoji 8"
            />
          </div>
        </div>
        <div class="flex gap-4 h-[5vh] items-center mt-4">
          <MTOTransparentBackground className="h-full scale-125" />
          <span class="text-2xl font-main_sans mr-7 ml-5">X</span>
          <img
            src="https://cdn.mtocommunity.com/utp/utp-logo.svg"
            class="h-full"
          />
        </div>
        <svg
          class="absolute bottom-8 w-72 h-36 text-mto_red_dark"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 84 72"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          id="indicator-arrow"
        >
          <path d="M12 24l30 24 30-24"></path>
        </svg>
      </div>
    </main>

    <!-- About -->
    <section
      id="about"
      class="min-h-screen flex flex-col items-center justify-start text-center mt-20 overflow-x-hidden"
    >
      <div class="bg-box relative w-full h-full">
        <div class="bg-red2 w-full"></div>
        <div class="bg-blue2 w-full"></div>
      </div>
      <div
        class="flex flex-col items-center px-8 space-y-2 w-full md:px-16 lg:px-24 xl:px-32"
      >
        <h2 class="text-2xl mb-8 font-main_sans lg:text-4xl">
          SOBRE LA EXPOFERIA
        </h2>
        <p class="text-sm mb-4 leading-normal lg:max-w-2xl">
          La Expoferia UTP-Chiclayo 2024 es un espacio único donde estudiantes,
          profesionales y emprendedores pueden conectarse, compartir
          conocimientos y disfrutar de experiencias innovadoras. Este año, el
          evento se realiza en colaboración con
          <span
            class="font-main_sans font-bold bg-clip-text text-transparent bg-gradient-to-r from-mto_red_light via-mto_red_light to-mto_gray_light"
          >
            MANY
          </span>
          <span
            class="font-main_sans font-bold bg-clip-text text-transparent bg-gradient-to-r from-mto_gray_light via-mto_gray_light to-mto_blue"
          >
            TO
          </span>
          <span
            class="font-main_sans font-bold bg-clip-text text-transparent bg-gradient-to-r from-mto_gray_light via-mto_blue to-mto_blue_dark"
          >
            ONE
          </span>, una comunidad de estudiantes de la UTP apasionados por la
          tecnología, que desarrollan proyectos en áreas como robótica,
          programación, redes y mucho más.
        </p>
        <p class="text-sm pt-3">
          Entre las actividades destacadas de esta edición, encontrarás:
        </p>
        <div
          class="w-screen flex justify-center items-center overflow-y-hidden overflow-x-hidden"
        >
          <Slider class="w-full" />
        </div>
      </div>
    </section>

    <!-- Projects -->
    <section
      id="projects"
      class="min-h-screen flex flex-col items-center justify-start text-center overflow-x-hidden mb-20"
    >
      <div class="bg-box relative w-full h-full">
        <div class="bg-red3 w-full"></div>
        <div class="bg-blue w-full"></div>
      </div>
      <div class="container mx-auto px-4 md:px-8 lg:px-12 xl:px-16">
        <h2 class="text-3xl mb-20 font-main_sans md:mt-10 lg:text-4xl">
          Proyectos
        </h2>

        <div
          class="grid grid-cols-1 mb-10 md:mb-10 md:grid-cols-2 lg:grid-cols-3 gap-8 place-items-center justify-items-center w-full"
        >
          {
            projects.map((project, index) => (
              <ProjectCard
                id={`project-${index}`}
                image={project.image}
                title={project.title}
                description={project.description}
                technologies={project.technologies}
                presenters={project.presenters}
              />
            ))
          }
        </div>
      </div>
    </section>

    <!-- Schedule -->
    <section
      id="schedule"
      class="min-h-screen flex flex-col items-center justify-start text-center mt-40 overflow-x-hidden"
    >
      <div class="bg-box w-full">
        <div class="bg-red4 w-full"></div>
      </div>
      <div class="container mx-auto px-4 md:px-8 lg:px-12 xl:px-16">
        <h2 class="text-3xl mb-14 font-main_sans lg:text-4xl">Cronograma</h2>

        <div class="flex flex-col items-center">
          {
            schedules.map((event) => (
              <Schedule
                event={{
                  date: {
                    start: new Date(event.date.start),
                    end: new Date(event.date.end),
                  },
                  name: event.name,
                  description: event.description,
                  imageUrl: event.imageUrl,
                }}
              />
            ))
          }
        </div>
      </div>
    </section>

    <!-- Exhibitors -->
    <section
      id="exhibitors"
      class="min-h-screen flex flex-col items-center justify-start text-center mt-40 overflow-x-hidden mb-20 md:mb-20"
    >
      <div class="bg-box relative w-full h-full">
        <div class="bg-red2 w-full"></div>
        <div class="bg-blue2 w-full"></div>
      </div>
      <div
        class="flex flex-col items-center px-8 space-y-6 w-full md:px-16 lg:px-24 xl:px-32"
      >
        <h2 class="text-3xl mb-14 font-main_sans lg:text-4xl">EXPOSITORES</h2>
        <div
          class="grid grid-cols-2 md:mb-20 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-16 w-full"
        >
          {exhibitors.map((exhibitor) => <Exhibitor exhibitor={exhibitor} />)}
        </div>
      </div>
    </section>
  </div>
</Layout>
