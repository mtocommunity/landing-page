    <!-- Social Media -->
    <p
      class="text-xl md:text-2xl lg:text-3xl p-8 lg:gap-16 mb-6 font-main_sans"
    >
      Social Media Team
    </p>
    <div
      class="lg:py-6 flex flex-wrap gap-y-8 gap-x-16 px-8 justify-items-center justify-center lg:gap-x-32 xl:gap-x-32"
    >
      <LeaderCard
        photo="https://cdn.mtocommunity.com/staff-matamitas.jpg"
        name="Cristhoper Cueva"
        role="Líder & Editor"
        link="https://www.instagram.com/matamitas25/"
      />
