---
import { faLaptopCode } from "@fortawesome/free-solid-svg-icons";
import Layout from "../../layouts/team/index.astro";
import { wave } from "../../assets/svgs";

import TeamIcon from "../../components/general/molecule/team-icon";
---

<Layout teamName="Dev-Team" teamIcon={faLaptopCode}>
  <div
    class="flex flex-col bg-gradient-to-t from-mto_gray to-mto_dark_gray min-h-[calc(100dvh-5rem)] justify-center gap-10 lg:flex-row lg:items-center lg:gap-20"
  >
    <div
      class="flex flex-col w-full justify-center items-center gap-4 lg:w-auto"
    >
      <TeamIcon icon={faLaptopCode} client:load />
      <h2 class="text-white text-2xl lg:text-4xl font-semibold text-center">
        Dev Team
      </h2>
    </div>
    <div class="text-white px-6 lg:pr-12 lg:w-1/3 lg:text-lg">
      Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ratione sequi
      tempora repudiandae repellendus odio quisquam quasi nihil amet. Provident
      molestias alias, facere commodi delectus quisquam quae quos nesciunt
      labore laborum.
    </div>
  </div>
  <div class="bg-mto_gray">
    <!-- Wave -->
    <img src={wave.src} alt="wave" />
  </div>
  <div class="flex flex-col items-center bg-white py-3 px-6">
    <h3 class="text-2xl font-semibold">Projects</h3>

    <!-- Projects -->
  </div>
</Layout>
