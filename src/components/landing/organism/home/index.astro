---
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import Button from "../../../general/attoms/button";
import { ButtonType } from "../../../general/attoms/button/types";
import Social from "../../../general/molecule/social";
import TeamsCloud from "../../molecule/teams_cloud";
import {
  faArrowRight,
  faClipboardCheck,
} from "@fortawesome/free-solid-svg-icons";

import "./style.css";
---

<div
  class="flex flex-col w-full min-h-[calc(100dvh-3.5rem)] pb-14 pt-10 lg:pt-36 lg:justify-between 2xl:pt-[17rem]"
  id="home"
>
  <div
    class="flex h-full justify-center lg:justify-between lg:px-60 lg:items-center"
  >
    <div
      class="flex flex-col items-center justify-between text-white lg:justify-center lg:gap-2"
    >
      <div class="flex flex-col gap-2">
        <h1 class="text-3xl font-bold lg:text-4xl font-main_sans">
          MANY TO ONE
        </h1>
        <p class="2xl:text-lg">
          La <span class="text-mto_red font-bold xl:text-xl">NUEVA</span> comunidad
          tecnológica<br />de Ingeniería de Sistemas de la UTP Chiclayo.
        </p>
      </div>
      <div class="w-2/5 lg:hidden min-h-[60dvh] justify-center flex flex-col">
        <TeamsCloud client:load />
      </div>
      <div class="flex justify-between w-full">
        <Button
          type={ButtonType.PRIMARY}
          link="https://discord.mtocommunity.com/">Únete ahora</Button
        >
        <Button type={ButtonType.SECONDARY} link="#about-us"
          >Más información</Button
        >
      </div>
    </div>
    <div
      class="hidden lg:flex h-28 xl:h-40 2xl:h-52 aspect-square text-white items-center"
    >
      <TeamsCloud client:load />
    </div>
  </div>
  <div class="hidden lg:flex justify-between">
    <!-- Social / discord -->
    <dir class="w-1/2 text-white pl-60 text-3xl xl:w-2/5">
      <Social />
    </dir>
    <!-- <a
      class="bg-gradient-to-r from-mto_gray_light to-discord_blurple text-white flex gap-2 p-3 opacity-90 transition-opacity duration-300 hover:opacity-100 h-20 rounded-lg mr-16"
      href="https://discord.mtocommunity.com/"
    >
      <div class="text-4xl flex items-center">
        <FontAwesomeIcon icon={faDiscord} />
      </div>
      <div class="flex flex-col font-bold">
        <p>Únete a nuestro</p>
        <p>Servidor de discord</p>
      </div>
    </a> -->
    <a
      class="flex gap-2 items-center p-3 opacity-90 transition-opacity duration-300 hover:opacity-100 h-20 rounded-lg mr-16 action-button"
      href="/event/iot-seminario-robotica-basica"
    >
      <div class="text-4xl flex items-center">
        <FontAwesomeIcon icon={faClipboardCheck} className="w-6" />
      </div>
      <div class="flex flex-col font-bold text-sm">
        <p>Incríbete al primer evento</p>
        <p>Robótica Básica!</p>
      </div>
      <div class="text-4xl flex items-center right-animation">
        <FontAwesomeIcon icon={faArrowRight} className="w-6" />
      </div>
    </a>
  </div>
</div>
