---
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import Button from "../../../general/attoms/button";
import { ButtonType } from "../../../general/attoms/button/types";
import Social from "../../../general/molecule/social";
import TeamsCloud from "../../molecule/teams_cloud";
import { faDiscord } from "@fortawesome/free-brands-svg-icons";
---

<div
  class="flex flex-col w-full min-h-[calc(100dvh-3.5rem)] pb-14 pt-10"
  id="home"
>
  <div
    class="flex h-full justify-center lg:justify-between lg:px-60 lg:items-center"
  >
    <div
      class="flex flex-col items-center justify-between text-white lg:justify-center lg:gap-2"
    >
      <div class="flex flex-col gap-2">
        <h1 class="text-3xl font-bold lg:text-4xl">ManyToOne</h1>
        <p class="2xl:text-lg">
          La <span class="text-mto_red font-bold xl:text-xl">NUEVA</span> comunidad
          tecnológica<br />de Ingeniería de Sistemas de la UTP Chiclayo.
        </p>
      </div>
      <div class="w-2/5 lg:hidden">
        <TeamsCloud client:load />
      </div>
      <div class="flex justify-between w-full">
        <Button type={ButtonType.PRIMARY}>Únete ahora</Button>
        <Button type={ButtonType.SECONDARY}>Más información</Button>
      </div>
    </div>
    <div
      class="hidden lg:flex h-28 xl:h-40 2xl:h-52 aspect-square text-white items-center"
    >
      <TeamsCloud client:load />
    </div>
  </div>
  <div class="hidden lg:flex justify-between">
    <!-- Social / discord -->
    <dir class="w-[40%] text-white pl-60 text-3xl 2xl:w-[30%]">
      <Social />
    </dir>
    <a
      class="bg-discord_blurple text-white flex gap-2 p-3 opacity-95 transition-opacity hover:opacity-100 h-20"
      href=""
    >
      <!-- Discord -->
      <div class="text-4xl flex items-center">
        <FontAwesomeIcon icon={faDiscord} />
      </div>
      <div class="flex flex-col font-bold">
        <p>Únete a nuestro</p>
        <p>Servidor de discord</p>
      </div>
    </a>
  </div>
</div>
