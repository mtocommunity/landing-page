---
import { TeamEvent } from "../../../../types";
import { formatDate2 } from "../../../../utils";

interface Props {
  event: TeamEvent;
  opacity?: number;
}

const { event, opacity = 100 } = Astro.props;
---

<div class="flex items-center group">
  <div
    class="hidden rounded-full aspect-square w-24 bg-mto_gray_light md:flex lg:w-48 my-8"
  >
    <img
      src={event.imageUrl}
      class="w-full aspect-square object-cover rounded-full"
    />
  </div>
  <div
    class={`flex items-center relative opacity-${opacity} hover:opacity-100`}
  >
    <div class="w-12 h-[.2rem] bg-mto_gray hidden md:flex">
      <!-- Horizontal -->
    </div>
    <div class="w-3 aspect-square bg-white rounded-full absolute -right-1">
      <div
        class="absolute w-5 aspect-square border border-white rounded-full -left-1 -top-1 hidden md:block"
      >
        <!-- Border 1 -->
      </div>
      <div
        class="absolute w-7 aspect-square outline outline-1 outline-white rounded-full -left-2 -top-2 scale-0 group-hover:scale-100 transition-transform duration-300"
      >
        <!-- Border 1 -->
      </div>
    </div>
    <div class="h-72 w-[.2rem] bg-mto_gray">
      <!-- Vertical -->
    </div>
  </div>
  <div class="flex flex-col ml-8 py-8 md:ml-16 lg:ml-32">
    <span class="text-yellow-600 group-hover:text-mto_blue text-sm">
      {event.date !== null ? formatDate2(event.date) : "Upcoming"}
    </span>
    <h3 class="text-xl font-bold">{event.name}</h3>
    <p class="text-pretty text-sm">{event.description}</p>
  </div>
</div>
