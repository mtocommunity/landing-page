---
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import {
  faGithub,
  faLinkedin,
  faInstagram,
} from "@fortawesome/free-brands-svg-icons";
import { faLink } from "@fortawesome/free-solid-svg-icons";

type Props = {
  link: string;
};

const { link } = Astro.props as Props;

const social = link.split("/")[2];

const icons = {
  "github.com": faGithub,
  "www.linkedin.com": faLinkedin,
  "instagram.com": faInstagram,
};
---

<a
  href={link}
  target="_blank"
  class="text-white bg-mto_gray rounded-full p-2 aspect-square flex items-center justify-center"
>
  <FontAwesomeIcon icon={icons[social] ?? faLink} className="w-6" />
</a>
